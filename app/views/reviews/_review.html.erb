<%# <div class="card" style="width: 50rem; margin-left: 40rem; margin-top: 2rem;"> %>
<div class="reviews">

  <%= render 'partials/flash' %>
  
  <div class="card">
    <!-- style attribut is temporary to put the card in the center -->
    <div class="card-body">
        <h2 class="my-4 mb-lg-5 text-center">Create a review</h2>
        
        <%#= form_with scope: :review, url: item_transact_reviews_path(@item.id, @transact.id), local: true do |f| %>
        <%= form_with url: item_transact_reviews_path(@item.id, @transact.id), local: true do |f| %>          
            <div class="d-flex flex-row">
                <div class="col-md-6">
                    <div class="field form-group">
                        <%= f.label "Review for" %>
                        <% if current_user == @user1 %>
                            <% review_for = @user2 %>
                        <% elsif current_user == @user2 %>
                            <% review_for = @user1 %>
                        <% end %>
                        <input type="text" class="form-control" placeholder="<%= review_for.username %>: <%= @item.name %>" disabled>
                    </div>
                </div>
            
                <div class="col-md-6">
                    <div class="field form-group">
                    <div class="pantapal"></div> 
                        <%= f.hidden_field :transact_id, value: @transact.id %>
                        <% if current_user == @user1 %>
                            <%= f.hidden_field :user2_id, value: review_for.id %>

                            

                            <div class="review-rating">
                                <%= f.radio_button :user2_score, 5, class: "star-input", name: "user2_score", id: "user2_score_5" %>
                                    <%= f.label :user2_score_5, class: "star-label" %> 
                                <%= f.radio_button :user2_score, 4, class: "star-input", name: "user2_score", id: "user2_score_4" %>
                                    <%= f.label :user2_score_4, class: "star-label" %>
                                <%= f.radio_button :user2_score, 3, class: "star-input", name: "user2_score", id: "user2_score_3" %>
                                    <%= f.label :user2_score_3, class: "star-label" %>
                                <%= f.radio_button :user2_score, 2, class: "star-input", name: "user2_score", id: "user2_score_2" %>
                                    <%= f.label :user2_score_2, class: "star-label" %>
                                <%= f.radio_button :user2_score, 1, class: "star-input", name: "user2_score", id: "user2_score_1" %>
                                    <%= f.label :user2_score_1, class: "star-label" %>
                            </div>
                            

                        <% elsif current_user == @user2 %>
                            <%= f.hidden_field :user1_id, value: review_for.id %>
                            
                            <div class="review-rating">
                                <%= f.radio_button :user1_score, 5, class: "star-input", name: "user1_score", id: "user1_score_5" %>
                                    <%= f.label :user1_score_5, class: "star-label" %> 
                                <%= f.radio_button :user1_score, 4, class: "star-input", name: "user1_score", id: "user1_score_4" %>
                                    <%= f.label :user1_score_4, class: "star-label" %>
                                <%= f.radio_button :user1_score, 3, class: "star-input", name: "user1_score", id: "user1_score_3" %>
                                    <%= f.label :user1_score_3, class: "star-label" %>
                                <%= f.radio_button :user1_score, 2, class: "star-input", name: "user1_score", id: "user1_score_2" %>
                                    <%= f.label :user1_score_2, class: "star-label" %>
                                <%= f.radio_button :user1_score, 1, class: "star-input", name: "user1_score", id: "user1_score_1" %>
                                    <%= f.label :user1_score_1, class: "star-label" %>
                            </div>

                        <% end %>
                    </div>
                </div>
            </div>

            <% if current_user == @user1 %>       
                <div class="field form-group">
                    <%= f.label :traded_with, 'Traded with' %>
                    <%= f.text_field :traded_with, autofocus: true, class: "form-control" %>
                </div>
            <% end %>
            

            <div class="field form-group">
                <%= f.label :description, 'Description' %>
                <%= f.text_area :description, autofocus: true, class: "form-control" %>
            </div>
        
            <div class="actions mt-4">
                <%= f.submit "Submit review", class: "btn btn-primary btn-block mt-4" %>
            </div>
        <% end %>
    
    </div><!-- card-body -->
  </div><!-- card -->
</div>

